h1 {
  font-size: 1.33em; /* equivalent to 16pt */
}
h2 {
  font-size: 1.17em; /* equivalent to 14pt */
}
p {
    margin: 0 0 0.5em 0; /* Adds bottom margin */
  }
  p {
    margin: 0 0 0.5em 0; /* Adds bottom margin */
  }
  h1, h2 {
    margin: 0.83em 0 0.17em 0; /* Top and bottom margins */
  }
  p:first-of-type {
    font: 0.17em/1.33 Verdana, sans-serif; /* Sets font size and line height */
  }
  p {
    text-indent: 5em; /* Indents the first line of all paragraphs */
  }
  p.first {
    text-indent: 0em; /* Removes indent for the first paragraph class */
  }
  <link rel="stylesheet" type="text/css" href="style.css" media="screen" title="Basic" />
/* General styles that apply at all times */
body {
    color: black; /* Default text color */
    background-color: yellow; /* Default background color, visible in screen mode */
}

/* Media query for screen */
@media screen {
    body {
        background-color: yellow; /* Specific background color for screens */
    }
}

/* Media query for print */
@media print {
    body {
        color: black; /* Ensuring text is black on white for print */
        background-color: white; /* White background for print */
    }
    div#navigation {
        display: none;  /* Hide navigation elements when printing */
    }
}

